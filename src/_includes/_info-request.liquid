<section class="">
    <form>
        <p class="h4">Request Information</p>
        <div class="mb-3">
            <label for="userEmail" class="form-label">Email address</label>
            <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <fieldset class="mb-3 form-check">
            <legend>Your Interest</legend>
            <ul class="list-unstyled">
                <li>
                    <input type="checkbox" class="form-check-input" value="Environmental" id="interestEnvironmental">
                    <label for="interestEnvironmental" class="form-check-label">Environmental</label>
                </li>
                <li>
                    <input type="checkbox" class="form-check-input" value="Compliance" id="interestCompliance">
                    <label for="interestCompliance" class="form-check-label">Compliance</label>
                </li>
                <li>
                    <input type="checkbox" class="form-check-input" value="WasteManagement" id="interestWasteManagement">
                    <label for="interestWasteManagement" class="form-check-label">Waste Management</label>
                </li>
                <li>
                    <input type="checkbox" class="form-check-input" value="Geological" id="interestGeological">
                    <label for="interestGeological" class="form-check-label">Geological</label>
                </li>
            </ul>
        </fieldset>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</section>
